<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione su candidato"
            android:textColor="#0A2647"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Tarjeta con los candidatos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <RadioGroup
                android:id="@+id/rgCandidatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <!-- Aquí NO más RadioButtons estáticos -->

        </LinearLayout>

        <!-- Botón moderno -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmarVoto"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Confirmar voto"
            android:textAllCaps="false"
            android:backgroundTint="@color/nav_item_color"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
